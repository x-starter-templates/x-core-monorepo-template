{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"incremental": true,
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.basic.tsbuildinfo",

		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",

		"allowJs": true,

		"declaration": true,
		"declarationMap": true,

		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,

		"strict": true,

		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "build", "dist", ".next"]
}
