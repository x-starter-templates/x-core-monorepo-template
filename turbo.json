{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"cache": true
		},
		"test": {
			"dependsOn": ["^test"],
			"cache": false
		},
		"lint": {
			"dependsOn": ["^lint"],
			"cache": false
		},
		"format": {
			"cache": false
		},
		"//#format": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"//#clean": {
			"cache": false
		}
	}
}
